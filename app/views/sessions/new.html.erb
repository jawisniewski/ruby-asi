<h2><%= t('login')%></h2>
<hr>

<p id="notice">
	<div style="color: red">
		<%= notice %>
	</div>
</p>

<%= form_tag sessions_path do %>

<div class="form-horizontal">
	<div class="form-group">
		<div class="col-md-3 text-right margin-top">
			Email
		</div>
		<div class="col-md-9">
			<%= text_field_tag :email, params[:email], class: "form-control label-form" %>
		</div>
	</div>
	<div class="form-group">

		<div class="col-md-3 text-right margin-top">
			<%= t('pass')%>
		</div>
		<div class="col-md-9">
			<%= password_field_tag :password, params[:password], class: "form-control label-form" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-3 col-md-9">
				<%= submit_tag t('login') %>
			</div>
	</div>
</div>

<% end %>