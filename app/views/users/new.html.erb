<h2>Utwórz konto</h2>
<hr>

<% if @user.errors.any? %>
<div class="row">
    <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>.
        <% end %>
    </div>
</div>
<% end %>

<%= form_for @user do |f| %>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-3 text-right margin-top">
        Adres email
        </div>
        <div class="col-md-9">
            <%= f.text_field :email, class: "form-control label-form"%>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3 text-right margin-top">
            Hasło
        </div>
        <div class="col-md-9">
            <%= f.password_field :password, class: "form-control label-form" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3 text-right margin-top">
            Powtórz hasło
        </div>
        <div class="col-md-9">
            <%= f.password_field :password_confirmation, class: "form-control label-form" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Utwórz konto">
        </div>
    </div>
</div>

<% end %>