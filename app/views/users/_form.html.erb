<%= form_for(user) do |f| %>

<% if @user.errors.any? %>
    <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>.
        <% end %>
    </div>
<% end %>

<div class="form-horizontal">
  <div class="form-group">
    <div class="col-md-3 text-right margin-top">
       Email
    </div>
    <div class="col-md-9">
      <%= f.text_field :email, class: "form-control label-form" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 text-right margin-top">
        <%= t('pass')%>
    </div>
    <div class="col-md-9">
      <%= f.password_field :password, class: "form-control label-form" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 text-right margin-top">
            <%= t('conf_pass')%>
    </div>
    <div class="col-md-9">
      <%= f.password_field :password_confirmation, class: "form-control label-form" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-9">
      <input type="submit" value= <%= t('create-account') %> > 
      </div>
    </div>
  </div>

<% end %>